{
  "name": "xero-node-oauth2-ts-starter",
  "version": "1.0.0",
  "description": "a starter project using node, express, typescript, xero-node, and oauth 2.0",
  "main": "build/app.js",
  "scripts": {
  "tsc": "tsc",
  "copy": "ncp ./app/key.json ./build/key.json",
  "dev": "ts-node-dev --respawn --transpile-only ./app/app.ts",
  "prod": "tsc && npm run copy && node ./build/app/app.js"
}
