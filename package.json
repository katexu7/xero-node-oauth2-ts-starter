  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "express-session": "^1.17.0",
    "firebase": "^10.3.1",
    "firebase-admin": "^11.10.1",
    "jwt-decode": "^2.2.0",
    "xero-node": "^4.15.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/express-session": "^1.15.16",
    "@types/node": "^13.1.8",
    "ncp": "^2.0.0",
    "openid-client": "^3.14.0",
    "ts-lint": "^4.5.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^5.2.2"
  }
